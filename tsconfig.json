{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src",
		"test"
  ]
}
